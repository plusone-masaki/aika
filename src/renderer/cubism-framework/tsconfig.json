{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "lib": ["DOM"]
  },
  "include": [
    "src/**/*.ts",
    "**/public/CubismSdkForWeb/Core/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
