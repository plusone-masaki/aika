    "electron": "^23.1.4",
    "electron-builder": "^24.1.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^1.0.20",
    "eslint": "^8.36.0",
    "eslint-plugin-vue": "^9.9.0",
    "firebase-tools": "^0.1.6",
    "pug": "^3.0.2",
    "sass": "^1.60.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.1.4",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.2.0"
