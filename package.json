    "electron-updater": "^5.3.0",
    "follow-redirects": "^1.15.2",
    "isomorphic-dompurify": "^1.2.0",
    "marked": "^4.3.0",
    "node-7z": "^3.0.0",
    "openai": "^3.2.1",
    "sound-play": "^1.1.0",
    "vosk-browser": "^0.0.8"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/follow-redirects": "^1.14.1",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.15.5",
